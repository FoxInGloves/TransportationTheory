<Window
    Height="450"
    ResizeMode="CanResizeWithGrip"
    Title="TransportationTheorySolver"
    Width="900"
    WindowState="Normal"
    mc:Ignorable="d"
    x:Class="TransportationTheory.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataGrid2D="http://gu.se/DataGrid2D"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Background" Value="AliceBlue" />
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="MaxWidth" Value="500" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer 
            VerticalScrollBarVisibility="Auto">
            <TabControl>
                <TabItem
                    Header="Solver"
                    Height="20"
                    Width="70">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            FontFamily="T"
                            FontSize="20"
                            Grid.Column="1"
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            Margin="5"
                            Text="Solution of the transportation theory"
                            VerticalAlignment="Top" />

                        <TextBlock
                            FontSize="14"
                            Grid.Row="0" 
                            Grid.Column="1"
                            Margin="88,5,0,0"
                            Text="Row" />
                        <TextBlock
                            Grid.Row="0" 
                            Grid.Column="0" 
                            FontSize="14"
                            Margin="42,0,0,0"
                            Text="Column"
                            VerticalAlignment="Bottom" />

                        <Button
                            Command="{Binding AddColumnCommand}"
                            Content="+"
                            Grid.Column="1"
                            Grid.Row="0"
                            Height="40"
                            HorizontalAlignment="Left"
                            Margin="10"
                            VerticalAlignment="Bottom"
                            Width="70">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10" />
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button
                            Command="{Binding RemoveColumnCommand}"
                            Content="-"
                            Grid.Column="1"
                            Grid.Row="0"
                            Height="40"
                            HorizontalAlignment="Left"
                            Margin="120,10,10,10"
                            VerticalAlignment="Bottom"
                            Width="70">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10" />
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button
                            Command="{Binding AddRowCommand}"
                            Content="+"
                            Grid.Column="0"
                            Grid.Row="1"
                            Height="40"
                            HorizontalAlignment="Right"
                            Margin="10"
                            VerticalAlignment="Top"
                            Width="70">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10" />
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button
                            Command="{Binding RemoveRowCommand}"
                            Content="-"
                            Grid.Column="0"
                            Grid.Row="1"
                            Height="40"
                            HorizontalAlignment="Right"
                            Margin="10,80,10,10"
                            VerticalAlignment="Top"
                            Width="70">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10" />
                                </Style>
                            </Button.Resources>
                        </Button>

                        <StackPanel
                            Grid.Column="1"
                            Grid.Row="1"
                            Orientation="Horizontal">

                            <StackPanel
                                HorizontalAlignment="Center"
                                Margin="20"
                                MaxWidth="600"
                                VerticalAlignment="Top">

                                <TextBlock 
                                    Text="Original matrix:" 
                                    Margin="10, 0, 0, 0"/>
                                <DataGrid
                                    Background="White"
                                    ColumnWidth="*"
                                    FontSize="14"
                                    HeadersVisibility="None"
                                    HorizontalAlignment="Left"
                                    Margin="10"
                                    MaxWidth="500"
                                    RowHeaderWidth="0"
                                    VerticalAlignment="Top"
                                    dataGrid2D:ItemsSource.Array2D="{Binding Matrix}" />
                                <Button
                                    Click="ButtonBase_OnClick"
                                    Command="{Binding GetBasePlanCommand}"
                                    Content="Solve"
                                    Height="60"
                                    Margin="40"
                                    Width="100">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="10" />
                                        </Style>
                                    </Button.Resources>
                                </Button>

                                <TextBlock
                                    Margin="0,30,0,0"
                                    Name="Optimize"
                                    Text="Optimal plan:"
                                    Visibility="Hidden" />
                                <DataGrid
                                    Background="White"
                                    ColumnWidth="*"
                                    HeadersVisibility="None"
                                    HorizontalAlignment="Left"
                                    Margin="5"
                                    MaxWidth="500"
                                    RowHeaderWidth="0"
                                    dataGrid2D:ItemsSource.Array2D="{Binding OptimizeMatrix}" />
                                <TextBlock Text="{Binding MinCostOptimizeMatrix}" />
                            </StackPanel>

                            <StackPanel Margin="100,20,20,20">

                                <TextBlock
                                    Name="BasePlan"
                                    Text="supporting plan:"
                                    Visibility="Hidden" />
                                <DataGrid
                                    Background="White"
                                    ColumnWidth="*"
                                    HeadersVisibility="None"
                                    HorizontalAlignment="Left"
                                    Margin="5"
                                    MaxWidth="500"
                                    RowHeaderWidth="0"
                                    dataGrid2D:ItemsSource.Array2D="{Binding BasicMatrix}" />
                                <TextBlock Text="{Binding MinCostBasicMatrix}" />
                            </StackPanel>

                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem
                    Header="Help"
                    Height="20"
                    Width="70">
                    <StackPanel>
                        <TextBlock
                            FontSize="20"
                            HorizontalAlignment="Center"
                            Text="Help" />
                        <TextBlock FontSize="18" Margin="10,0,0,0">
                            All data is entered into the original matrix.<LineBreak />
                            Suppliers' inventories are entered in the rightmost column, consumer needs are entered in the bottommost row.<LineBreak />
                            To add or remove a column, you need to click the corresponding buttons on the left side of the screen.<LineBreak />
                            After entering all the values into the initial matrix, click the Solve button, and the solution will appear on the screen!</TextBlock>
                    </StackPanel>
                </TabItem>
            </TabControl>

        </ScrollViewer>
    </Grid>
</Window>
